// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(uuid())
  name        String     @unique
  description String
  price       Float
  purchasePrice Float?   @default(0)
  sku         String?
  quantity    Int
  damagedQuantity Int    @default(0)
  lowStockThreshold Int  @default(10)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  SaleItem    SaleItem[]
  ExchangeItem ExchangeItem[]
  BulkPurchaseItem BulkPurchaseItem[]
  SaleReturnItem SaleReturnItem[]
}

model Sale {
  id          String     @id @default(uuid())
  billNumber  String     @unique
  totalAmount Float
  originalTotalAmount Float?
  discount    Float      @default(0)
  paidAmount  Float      @default(0)
  saleDate    DateTime   @default(now())
  description String?
  contact     Contact?   @relation(fields: [contactId], references: [id])
  contactId   String?
  items       SaleItem[]
  exchangeItems ExchangeItem[]
  returns     SaleReturn[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model SaleItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  purchasePrice Float  @default(0)
  orderIndex Int     @default(0)
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  address   String?
  phoneNumber     String
  remainingAmount Float?   @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  purchases BulkPurchase[]
  sales     Sale[]
  loanTransactions LoanTransaction[]
}

model BulkPurchase {
  id          String     @id @default(uuid())
  invoiceNumber String?   @unique
  totalAmount Float
  paidAmount  Float
  purchaseDate DateTime   @default(now())
  contact     Contact    @relation(fields: [contactId], references: [id])
  contactId   String
  items       BulkPurchaseItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BulkPurchaseItem {
  id            String       @id @default(uuid())
  quantity      Int
  purchasePrice Float
  bulkPurchase  BulkPurchase @relation(fields: [bulkPurchaseId], references: [id])
  bulkPurchaseId String
  product       Product      @relation(fields: [productId], references: [id])
  productId     String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model SaleReturn {
  id          String     @id @default(uuid())
  returnNumber String    @unique
  totalAmount Float
  returnDate  DateTime   @default(now())
  reason      String?
  refundAmount Float     @default(0)
  refundPaid  Boolean    @default(false)
  refundDate  DateTime?
  sale        Sale       @relation(fields: [saleId], references: [id])
  saleId      String
  items       SaleReturnItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model SaleReturnItem {
  id           String     @id @default(uuid())
  quantity     Int
  price        Float
  saleReturn   SaleReturn @relation(fields: [saleReturnId], references: [id])
  saleReturnId String
  product      Product    @relation(fields: [productId], references: [id])
  productId    String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model ExchangeItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  orderIndex Int     @default(0)
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LoanTransaction {
  id          String   @id @default(uuid())
  amount      Float
  type        String   // 'GIVEN', 'TAKEN', 'RETURNED_BY_CONTACT', 'RETURNED_TO_CONTACT'
  description String?
  date        DateTime @default(now())
  contact     Contact  @relation(fields: [contactId], references: [id])
  contactId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DriveSettings {
  id                String   @id @default(uuid())
  serviceAccountKey String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  resetOtp  String?
  otpExpiry DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShopSettings {
  id              String   @id @default(uuid())
  email           String
  shopName        String
  shopDescription String?
  shopDescription2 String?
  userName1       String
  userPhone1      String
  userName2       String?
  userPhone2      String?
  userName3       String?
  userPhone3      String?
  brand1          String?
  brand1Registered Boolean  @default(false)
  brand2          String?
  brand2Registered Boolean  @default(false)
  brand3          String?
  brand3Registered Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}